<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCE5D8"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Back and Search Icons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="50dp">

            <ImageView
                android:id="@+id/buttonBack1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_back"
                android:tint="@android:color/black" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/buttonSearch"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_search"
                android:tint="@android:color/black" />
        </LinearLayout>

        <!-- Cake Image -->
        <ImageView
            android:id="@+id/cakeImage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="fitCenter"
            android:src="@drawable/cake_wedding" />

        <!-- Cake Name & Rating -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/cakeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="25dp"
                android:text="@string/wedding_cake"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_star"
                android:tint="@android:color/holo_orange_light" />

            <TextView
                android:id="@+id/cakeRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/cakeDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/the_wedding_cake_is_a_symbol_of_elegance_and_love_crafted_to_make_your_special_day_unforgettable_with_its_towering_tiers_of_moist_flavorful_cake_layers_it_s_beautifully_adorned_with_intricate_designs_delicate_fondant_and_romantic_floral_accents_whether_classic_vanilla_rich_chocolate_or_any_flavor_of_your_choice_this_cake_is_as_stunning_as_it_is_delicious_a_masterpiece_that_adds_a_touch_of_sweetness_to_your_happily_ever_after"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <!-- Portion Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingLeft="100dp"
            android:paddingTop="50dp"
            android:text="@string/portion"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="100dp">

            <ImageView
                android:id="@+id/buttonDecrease1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_button"
                android:padding="8dp"
                android:src="@drawable/ic_minus"
                android:tint="@android:color/white" />

            <TextView
                android:id="@+id/textPortion1"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:gravity="center"
                android:text="2"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/buttonIncrease1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_button"
                android:padding="8dp"
                android:src="@drawable/ic_plus"
                android:tint="@android:color/white" />
        </LinearLayout>

        <!-- Price and Order Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:paddingTop="100dp">

            <TextView
                android:id="@+id/textPrice1"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@color/dark_gray"
                android:gravity="center"
                android:padding="12dp"
                android:text="Rs.5000/="
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonOrderNow1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="12dp"
                android:text="@string/order_now"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
