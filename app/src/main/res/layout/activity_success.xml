<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FCE5D8">

    <!-- Card-like container for the success message -->
    <LinearLayout
        android:layout_width="335dp"
        android:layout_height="444dp"
        android:layout_margin="16dp"
        android:background="@android:color/white"
        android:elevation="8dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Success Icon -->

        <!-- Success Message -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/circle_purple_background"
            android:contentDescription="Success Icon"
            android:src="@android:drawable/checkbox_on_background" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/success"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="@string/your_payment_was_successful_na_receipt_for_this_purchase_has_nbeen_sent_to_your_email"
            android:textColor="#000000"
            android:textSize="20sp" />

        <!-- Go Back Button -->
        <Button
            android:id="@+id/buttonGoBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_purple_background"
            android:padding="12dp"
            android:text="Go Back"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>