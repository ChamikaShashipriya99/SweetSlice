<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_beige"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Back and Search Icons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="50dp">

            <ImageView
                android:id="@+id/buttonBack"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_back"
                android:tint="@android:color/black" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/buttonSearch"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_search"
                android:tint="@android:color/black" />
        </LinearLayout>

        <!-- Cake Image -->
        <ImageView
            android:id="@+id/cakeImage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="fitCenter"
            android:src="@drawable/black_forest_cake" />

        <!-- Cake Name & Rating -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/cakeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="25dp"
                android:text="Black Forest Cake"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_star"
                android:tint="@android:color/holo_orange_light" />

            <TextView
                android:id="@+id/cakeRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.9"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/cakeDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="The Black Forest Cake is a timeless dessert that delivers a symphony of flavors in every slice. Made with layers of rich, moist chocolate sponge cake, it's generously filled with luscious whipped cream and sweet-tart cherries. Topped with smooth chocolate shavings and vibrant cherries, this cake is a decadent treat that perfectly balances sweetness and a hint of fruity tang."
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <!-- Portion Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingLeft="100dp"
            android:paddingTop="50dp"
            android:text="Portion"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="100dp">

            <ImageView
                android:id="@+id/buttonDecrease"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_button"
                android:padding="8dp"
                android:src="@drawable/ic_minus"
                android:tint="@android:color/white" />

            <TextView
                android:id="@+id/textPortion"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:gravity="center"
                android:text="2"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/buttonIncrease"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_button"
                android:padding="8dp"
                android:src="@drawable/ic_plus"
                android:tint="@android:color/white" />
        </LinearLayout>

        <!-- Price and Order Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:paddingTop="75dp">

            <TextView
                android:id="@+id/textPrice"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@color/dark_gray"
                android:gravity="center"
                android:padding="12dp"
                android:text="Rs.3000/="
                android:textColor="@android:color/white"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/buttonOrderNow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="12dp"
                android:text="ORDER NOW"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
